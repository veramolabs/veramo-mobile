{
  "name": "veramomobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "rn-nodeify --install assert,buffer,process,crypto,stream,vm --hack",
    "test-ci": "jest",
    "build-detox-android": "detox build -c android.emu.debug",
    "test-detox-android": "detox test -c android.emu.debug"
  },
  "dependencies": {
    "@ethersproject/shims": "^5.5.0",
    "@veramo/core": "^3.0.1-next.10",
    "@veramo/credential-w3c": "^3.0.1-next.10",
    "@veramo/data-store": "^3.0.1-next.10",
    "@veramo/did-manager": "^3.0.1-next.10",
    "@veramo/did-provider-ethr": "^3.0.1-next.10",
    "@veramo/did-resolver": "^3.0.1-next.10",
    "@veramo/key-manager": "^3.0.1-next.10",
    "@veramo/kms-local": "^3.0.1-next.10",
    "@zxing/text-encoding": "^0.9.0",
    "assert": "^1.5.0",
    "buffer": "^4.9.2",
    "detox": "^18.23.1",
    "ethr-did-resolver": "^4.3.4",
    "process": "^0.11.10",
    "react": "17.0.2",
    "react-native": "0.66.1",
    "react-native-crypto": "^2.2.0",
    "react-native-get-random-values": "^1.7.0",
    "react-native-randombytes": "^3.6.1",
    "react-native-sqlite-storage": "^6.0.1",
    "readable-stream": "^1.0.33",
    "stream-browserify": "^1.0.0",
    "vm-browserify": "0.0.4",
    "web-did-resolver": "^2.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^27.0.2",
    "@types/react-native": "^0.65.0",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^27.3.1",
    "eslint": "^7.14.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.66.2",
    "pretty-quick": "^3.1.1",
    "react-native-testing-library": "^6.0.0",
    "react-test-renderer": "17.0.2",
    "rn-nodeify": "^10.3.0",
    "ts-jest": "^27.0.7",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js|jsx)"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ]
  },
  "detox": {
    "configurations": {
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "emu"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/RNDetoxGa.app",
        "build": "xcodebuild -workspace ios/RNDetoxGa.xcworkspace -scheme RNDetoxGa -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    },
    "test-runner": "jest"
  },
  "react-native": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  },
  "browser": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  }
}
